                    "lun": 3,
                    "vhd": {
                        "Uri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net/',parameters('containerName'),'/',parameters('diskNamingPrefix'),'disk-3.vhd')]"
                    },
                    "caching": "None",
                    "createOption": "Empty"
                }
            ],
            "5": [
                {
                    "name": "datadisk4",
                    "diskSizeGB": "[parameters('diskSizeGB')]",
                    "lun": 4,
                    "vhd": {
                        "Uri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net/',parameters('containerName'),'/',parameters('diskNamingPrefix'),'disk-4.vhd')]"
                    },
                    "caching": "None",
                    "createOption": "Empty"
                }
            ],
            "6": [
                {
                    "name": "datadisk5",
                    "diskSizeGB": "[parameters('diskSizeGB')]",
                    "lun": 5,
                    "vhd": {
                        "Uri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net/',parameters('containerName'),'/',parameters('diskNamingPrefix'),'disk-5.vhd')]"
                    },
                    "caching": "None",
                    "createOption": "Empty"
                }
            ],
            "7": [
                {
                    "name": "datadisk6",
                    "diskSizeGB": "[parameters('diskSizeGB')]",
                    "lun": 6,
                    "vhd": {
                        "Uri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net/',parameters('containerName'),'/',parameters('diskNamingPrefix'),'disk-6.vhd')]"
                    },
                    "caching": "None",
                    "createOption": "Empty"
                }
            ],
            "8": [
                {
                    "name": "datadisk7",
                    "diskSizeGB": "[parameters('diskSizeGB')]",
                    "lun": 7,
                    "vhd": {
                        "Uri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net/',parameters('containerName'),'/',parameters('diskNamingPrefix'),'disk-7.vhd')]"
                    },
                    "caching": "None",
                    "createOption": "Empty"
                }
            ],
            "9": [
                {
                    "name": "datadisk8",
                    "diskSizeGB": "[parameters('diskSizeGB')]",
                    "lun": 8,
                    "vhd": {
                        "Uri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net/',parameters('containerName'),'/',parameters('diskNamingPrefix'),'disk-8.vhd')]"
                    },
                    "caching": "None",
                    "createOption": "Empty"
                }
            ],
            "10": [
                {
                    "name": "datadisk9",
                    "diskSizeGB": "[parameters('diskSizeGB')]",
                    "lun": 9,
                    "vhd": {
                        "Uri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net/',parameters('containerName'),'/',parameters('diskNamingPrefix'),'disk-9.vhd')]"
                    },
                    "caching": "None",
                    "createOption": "Empty"
                }
            ],
            "11": [
                {
                    "name": "datadisk10",
                    "diskSizeGB": "[parameters('diskSizeGB')]",
                    "lun": 10,
                    "vhd": {
                        "Uri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net/',parameters('containerName'),'/',parameters('diskNamingPrefix'),'disk-10.vhd')]"
                    },
