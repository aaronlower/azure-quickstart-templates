                "[variables('dataDisks')['15'][0]]",
                "[variables('dataDisks')['16'][0]]"
            ]
        }
    },

    "resources": [ ],

    "outputs": {

        "dataDiskArray": {
            "type": "array",
            "value": "[variables('disksArray')[parameters('numDataDisks')]]"
        }
    }
